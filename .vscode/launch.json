      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/BusBuddy.WPF/bin/Debug/net9.0-windows/BusBuddy.WPF.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "symbolOptions": {
        "searchPaths": [
          "${workspaceFolder}/BusBuddy.WPF/bin/Debug/net9.0-windows",
          "${workspaceFolder}/BusBuddy.Core/bin/Debug/net9.0"
        ],
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true,
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": [
            "System.Private.CoreLib.dll",
            "PresentationFramework.dll",
            "WindowsBase.dll",
            "System.Runtime.dll",
            "System.Xaml.dll"
          ]
        }
      },
      "justMyCode": false,
      "enableStepFiltering": false,
      "suppressJITOptimizations": true,
      "exceptionSettings": {
        "System.IO.FileNotFoundException": "userHandled"
      },
      "preLaunchTask": "shell: Direct: Build Solution (CMD)",
      "env": {
        "DOTNET_EnableWriteXorExecute": "0",
        "COMPLUS_ForceENC": "1"
      }
    }
  ]
