<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="BusBuddy Practical Rules" Description="Industry best practices for single-user WPF application" ToolsVersion="16.0">

  <!-- ========================================== -->
  <!-- INDUSTRY CRITICAL RULES (Non-negotiable) -->
  <!-- ========================================== -->

  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- Null Safety - INDUSTRY REQUIREMENT for .NET 8 -->
    <Rule Id="CS8600" Action="Warning" /> <!-- Converting null literal -->
    <Rule Id="CS8601" Action="Warning" /> <!-- Possible null reference assignment -->
    <Rule Id="CS8602" Action="Warning" /> <!-- Dereference of possibly null reference -->
    <Rule Id="CS8618" Action="Warning" /> <!-- Non-nullable field must contain non-null value -->

    <!-- Performance - INDUSTRY CRITICAL -->
    <Rule Id="CA1827" Action="Warning" /> <!-- Use Count/Length instead of Any() -->
    <Rule Id="CA1829" Action="Warning" /> <!-- Use Length/Count instead of Count() -->
    <Rule Id="CA2007" Action="Info" /> <!-- ConfigureAwait(false) - suggestion not error -->

    <!-- Resource Management - INDUSTRY REQUIREMENT -->
    <Rule Id="CA2000" Action="Warning" /> <!-- Dispose objects before losing scope -->
    <Rule Id="CA1816" Action="Warning" /> <!-- Dispose methods should call SuppressFinalize -->

    <!-- Code Quality - INDUSTRY BASELINE -->
    <Rule Id="CA1031" Action="Info" /> <!-- Do not catch general exception types -->
    <Rule Id="CA1062" Action="Info" /> <!-- Validate arguments of public methods -->
  </Rules>

  <!-- ========================================== -->
  <!-- WPF INDUSTRY STANDARDS (Practical) -->
  <!-- ========================================== -->

  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- WPF Designer compatibility -->
    <Rule Id="CA1303" Action="None" /> <!-- Localization not required for single-user -->
    <Rule Id="CA1304" Action="None" /> <!-- CultureInfo not critical for desktop -->
    <Rule Id="CA1305" Action="None" /> <!-- IFormatProvider not critical for desktop -->

    <!-- Practical exceptions for single-user desktop -->
    <Rule Id="CA1707" Action="None" /> <!-- Underscores allowed in test methods -->
    <Rule Id="CA1819" Action="None" /> <!-- Arrays in properties (Syncfusion compatibility) -->
  </Rules>

  <!-- ========================================== -->
  <!-- MODERN C# FEATURES (Industry Expectations) -->
  <!-- ========================================== -->

  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- C# 12 Features - Industry expects modern syntax -->
    <Rule Id="IDE0007" Action="Info" /> <!-- Use var when type is obvious -->
    <Rule Id="IDE0011" Action="Info" /> <!-- Add braces -->
    <Rule Id="IDE0019" Action="Info" /> <!-- Use pattern matching -->
    <Rule Id="IDE0021" Action="Info" /> <!-- Use expression body for constructors -->
    <Rule Id="IDE0022" Action="Info" /> <!-- Use expression body for methods -->
    <Rule Id="IDE0025" Action="Info" /> <!-- Use expression body for properties -->
  </Rules>

  <!-- ========================================== -->
  <!-- SYNCFUSION COMPATIBILITY -->
  <!-- ========================================== -->

  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- Allow Syncfusion patterns -->
    <Rule Id="CA1010" Action="None" /> <!-- Collections generic interface (Syncfusion has custom collections) -->
    <Rule Id="CA1822" Action="None" /> <!-- Mark members as static (Syncfusion event handlers) -->
    <Rule Id="CA1033" Action="None" /> <!-- Interface methods should be callable (Syncfusion interfaces) -->
  </Rules>

  <!-- ========================================== -->
  <!-- POWERSHELL 7.5.2 MANDATORY REQUIREMENTS -->
  <!-- ========================================== -->

  <!-- PowerShell Script Rules (Applied via MSBuild targets) -->
  <!-- Note: These rules are enforced by Tools\Scripts\PowerShell-7.5.2-Syntax-Enforcer.ps1 -->
  <!-- All PowerShell scripts MUST pass validation before build completion -->

  <Rules AnalyzerId="BusBuddy.PowerShell.Analyzer" RuleNamespace="BusBuddy.PowerShell">
    <!-- MANDATORY: PowerShell Version Requirements -->
    <Rule Id="PS7501" Action="Error" /> <!-- Missing #Requires -Version 7.5 directive -->
    <Rule Id="PS7502" Action="Error" /> <!-- Incorrect PowerShell version requirement -->

    <!-- MANDATORY: Parallel Processing Standards -->
    <Rule Id="PS7510" Action="Warning" /> <!-- ForEach-Object -Parallel missing -ThrottleLimit -->
    <Rule Id="PS7511" Action="Warning" /> <!-- Parallel block missing error handling -->
    <Rule Id="PS7512" Action="Info" /> <!-- Consider using Start-ThreadJob for background tasks -->

    <!-- MANDATORY: Error Handling Standards -->
    <Rule Id="PS7520" Action="Warning" /> <!-- Missing try-catch in parallel operations -->
    <Rule Id="PS7521" Action="Info" /> <!-- Use structured error handling with $ErrorActionPreference -->
    <Rule Id="PS7522" Action="Warning" /> <!-- Missing error context in catch blocks -->

    <!-- MANDATORY: Resource Management -->
    <Rule Id="PS7530" Action="Warning" /> <!-- Thread jobs not properly cleaned up -->
    <Rule Id="PS7531" Action="Info" /> <!-- Consider using 'using' statement for disposable objects -->
    <Rule Id="PS7532" Action="Warning" /> <!-- Large collections without memory optimization -->

    <!-- MANDATORY: Path and Cross-Platform Compatibility -->
    <Rule Id="PS7540" Action="Warning" /> <!-- Use Join-Path instead of string concatenation -->
    <Rule Id="PS7541" Action="Info" /> <!-- Use Resolve-Path for cross-platform compatibility -->
    <Rule Id="PS7542" Action="Warning" /> <!-- Hardcoded Windows-specific paths -->

    <!-- MANDATORY: BusBuddy Integration Standards -->
    <Rule Id="PS7550" Action="Error" /> <!-- Missing BusBuddy module requirements -->
    <Rule Id="PS7551" Action="Warning" /> <!-- Non-compliant function naming convention -->
    <Rule Id="PS7552" Action="Info" /> <!-- Missing PowerShell help documentation -->
    <Rule Id="PS7553" Action="Warning" /> <!-- Missing validation for hardware optimization -->
  </Rules>

  <!-- ========================================== -->
  <!-- POWERSHELL BUILD INTEGRATION -->
  <!-- ========================================== -->

  <!-- MSBuild Integration Points for PowerShell Validation -->
  <!-- These ensure PowerShell syntax checking is mandatory during builds -->

  <Rules AnalyzerId="Microsoft.Build" RuleNamespace="Microsoft.Build">
    <!-- Build Process Integration -->
    <Rule Id="MSB4018" Action="Error" /> <!-- PowerShell syntax validation failure blocks build -->
    <Rule Id="MSB4019" Action="Warning" /> <!-- PowerShell best practices violations -->
  </Rules>

</RuleSet>
