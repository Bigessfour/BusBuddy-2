<Application x:Class="BusBuddy.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/Main/MainWindow.xaml">

  <Application.Resources>
    <ResourceDictionary>

      <!--   MINIMAL RESOURCE DICTIONARY FOR STARTUP STABILITY  -->
      <!--  Additional converters and templates will be added after successful initialization  -->
      <!--  SkinManager theme configuration handled via App.xaml.cs ConfigureSyncfusionTheme()  -->

      <!--  Essential brushes for basic functionality  -->
      <SolidColorBrush x:Key="ContentForeground"
          Color="#FFFFFF"/>
      <SolidColorBrush x:Key="TextForeground"
          Color="#FFFFFF"/>
      <SolidColorBrush x:Key="ControlForeground"
          Color="#FFFFFF"/>
      <SolidColorBrush x:Key="TextPrimary"
          Color="#FFFFFF"/>
      <SolidColorBrush x:Key="BackgroundBrush"
          Color="#1E1E1E"/>
      <SolidColorBrush x:Key="BackgroundNormalBrush"
          Color="#1E1E1E"/>
      <SolidColorBrush x:Key="SurfaceBackground"
          Color="#1E1E1E"/>
      <SolidColorBrush x:Key="SurfaceBorderBrush"
          Color="#323130"/>

    </ResourceDictionary>
  </Application.Resources>

</Application>
