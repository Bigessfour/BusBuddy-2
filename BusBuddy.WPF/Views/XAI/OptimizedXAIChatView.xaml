<!--
  ╔═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
  ║                                              🚀 OPTIMIZED XAI CHAT VIEW 🚀                                                       ║
  ║                                         [PERFORMANCE-TUNED AI ASSISTANT CHAT]                                                     ║
  ║  ✨ SYNCFUSION OPTIMIZATIONS: Using SfChat for native performance and theme integration                                          ║
  ║  🎯 PERFORMANCE FEATURES: Lazy loading, debounced API calls, virtualized message rendering                                       ║
  ║  🎭 STANDARDIZED SIZING: Fixed 400px sidebar width, responsive height management                                                  ║
  ║  📊 SMART THROTTLING: Reactive Extensions debouncing for API call optimization                                                   ║
  ║  🌐 OPTIMIZED UX: Minimal loading states, efficient message templates, background processing                                     ║
  ╚═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
-->
<UserControl
  x:Class="BusBuddy.WPF.Views.XAI.OptimizedXAIChatView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
  xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels.XAI"
  MinWidth="400"
  MaxWidth="400"
  d:DataContext="{d:DesignInstance viewModels:OptimizedXAIChatViewModel}"
  d:DesignHeight="600"
  d:DesignWidth="400"
  mc:Ignorable="d">

  <UserControl.Resources>
    <!--  Lazy loading indicator style  -->
    <Style x:Key="LazyLoadingStyle" TargetType="syncfusion:SfBusyIndicator">
      <Setter Property="AnimationType" Value="Dots" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Height" Value="20" />
      <Setter Property="Width" Value="60" />
    </Style>
  </UserControl.Resources>

  <Grid Background="{DynamicResource ContentBackground}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  Compact Header - Optimized for 400px width  -->
    <Border
      Grid.Row="0"
      Padding="12,8"
      Background="{DynamicResource PrimaryBackground}">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  AI Icon  -->
        <Border
          Grid.Column="0"
          Width="32"
          Height="32"
          Margin="0,0,8,0"
          Background="{DynamicResource AccentBackground}"
          CornerRadius="16">
          <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="🤖" />
        </Border>

        <!--  Title  -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
          <TextBlock
            FontSize="14"
            FontWeight="SemiBold"
            Foreground="{DynamicResource PrimaryForeground}"
            Text="XAI Assistant" />
          <TextBlock
            FontSize="10"
            Foreground="{DynamicResource PrimaryForeground}"
            Opacity="0.8"
            Text="Bus Buddy AI" />
        </StackPanel>

        <!--  Status Indicator  -->
        <Border
          Grid.Column="2"
          Padding="8,4"
          Background="{DynamicResource BrandFleetGreenBrush}"
          CornerRadius="12">
          <StackPanel Orientation="Horizontal">
            <Ellipse
              Width="6"
              Height="6"
              Margin="0,0,4,0"
              VerticalAlignment="Center"
              Fill="{DynamicResource ProfessionalTextPrimary}" />
            <TextBlock
              FontSize="10"
              FontWeight="SemiBold"
              Foreground="{DynamicResource ProfessionalTextPrimary}"
              Text="Online" />
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!--  Optimized Chat Area with Performance Features  -->
    <Grid Grid.Row="1">
      <!--  Placeholder Chat Interface - Replace with working Syncfusion control  -->
      <ScrollViewer
        x:Name="ChatScrollViewer"
        Padding="12"
        Background="{DynamicResource ContentBackground}">
        <StackPanel x:Name="ChatMessagesPanel">
          <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="{DynamicResource ContentForeground}"
            Opacity="0.7"
            Text="XAI Chat Interface" />
          <TextBlock
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            FontSize="12"
            Foreground="{DynamicResource ContentForeground}"
            Opacity="0.5"
            Text="Chat functionality will be implemented here" />
        </StackPanel>
      </ScrollViewer>

      <!--  Lazy Loading Overlay  -->
      <Border
        Background="{DynamicResource SurfaceVariantBrush}"
        Opacity="0.9"
        Visibility="{Binding IsLazyLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
          <syncfusion:SfBusyIndicator IsBusy="{Binding IsLazyLoading}" Style="{StaticResource LazyLoadingStyle}" />
          <TextBlock
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            FontSize="12"
            Foreground="{DynamicResource ContentForeground}"
            Text="Loading chat history..." />
        </StackPanel>
      </Border>
    </Grid>

    <!--  Quick Actions Sidebar - Optimized for 400px width  -->
    <Border
      Grid.Row="2"
      Padding="12,8"
      Background="{DynamicResource SurfaceVariantBrush}"
      BorderBrush="{DynamicResource SurfaceBorderBrush}"
      BorderThickness="0,1,0,0">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Quick Actions Header  -->
        <TextBlock
          Grid.Row="0"
          Margin="0,0,0,8"
          FontSize="11"
          FontWeight="SemiBold"
          Foreground="{DynamicResource ContentForeground}"
          Text="Quick Actions" />

        <!--  Quick Action Buttons - Compact Grid  -->
        <UniformGrid
          Grid.Row="1"
          Columns="2"
          Rows="2">
          <syncfusion:ButtonAdv
            Height="28"
            Margin="2"
            Command="{Binding QuickFleetStatusCommand}"
            Content="📊 Fleet"
            FontSize="10"
            Style="{StaticResource SecondaryButtonAdvStyle}" />

          <syncfusion:ButtonAdv
            Height="28"
            Margin="2"
            Command="{Binding QuickFindBusCommand}"
            Content="🚌 Find Bus"
            FontSize="10"
            Style="{StaticResource SecondaryButtonAdvStyle}" />

          <syncfusion:ButtonAdv
            Height="28"
            Margin="2"
            Command="{Binding QuickRouteInfoCommand}"
            Content="📍 Routes"
            FontSize="10"
            Style="{StaticResource SecondaryButtonAdvStyle}" />

          <syncfusion:ButtonAdv
            Height="28"
            Margin="2"
            Command="{Binding QuickEmergencyCommand}"
            Content="⚠️ Emergency"
            FontSize="10"
            Style="{StaticResource EmergencyButtonAdvStyle}" />
        </UniformGrid>
      </Grid>
    </Border>

    <!--  Performance Monitoring Overlay (Debug Mode Only)  -->
    <Border
      Grid.Row="1"
      Margin="8"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Background="Transparent"
      Visibility="{Binding ShowPerformanceInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
      <Border
        Padding="8,4"
        Background="{DynamicResource SurfaceBrush}"
        CornerRadius="8"
        Opacity="0.8">
        <StackPanel>
          <TextBlock
            FontSize="9"
            Foreground="{DynamicResource ContentForeground}"
            Text="{Binding ApiCallCount, StringFormat='API Calls: {0}'}" />
          <TextBlock
            FontSize="9"
            Foreground="{DynamicResource ContentForeground}"
            Text="{Binding LastResponseTime, StringFormat='Response: {0}ms'}" />
        </StackPanel>
      </Border>
    </Border>
  </Grid>
</UserControl>
