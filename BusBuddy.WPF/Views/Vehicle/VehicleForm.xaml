<!--
╔══════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════╗
║                                              🚌 BUSBUDDY VEHICLE FORM - STEP 3 IMPLEMENTATION 🚌                                                                    ║
║                                           Phase 1: Standard WPF → Phase 2: Syncfusion Controls                                                                     ║
╚══════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════╝
-->

<UserControl x:Class="BusBuddy.WPF.Views.Vehicle.VehicleForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:BusBuddy.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Local converters for this control -->
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Step 3: ViewModel binding ready for Core service integration -->
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Main Content -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- HEADER WITH FLEET DASHBOARD -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0"
                Background="#2D2D30"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Search -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🚌 Vehicle Management"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- Step 3: Search input (Phase 1: TextBox → Phase 2: SfTextBox) -->
                    <TextBox x:Name="SearchBox"
                             Width="300"
                             Margin="30,0,0,0"
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#555555"
                             Padding="10,5">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding SearchCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </StackPanel>

                <!-- Step 3: Mini-dashboard with fleet statistics -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <Border Background="#323130" CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Vehicles" FontSize="10" Foreground="#CCCCCC"/>
                            <TextBlock Text="{Binding TotalVehicles}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#2ECC71" CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Active" FontSize="10" Foreground="White"/>
                            <TextBlock Text="{Binding ActiveVehicles}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FF8C00" CornerRadius="8" Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="Maintenance" FontSize="10" Foreground="White"/>
                            <TextBlock Text="{Binding VehiclesInMaintenance}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- MAIN CONTENT AREA -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>  <!-- Vehicle List -->
                <ColumnDefinition Width="20"/>  <!-- Splitter -->
                <ColumnDefinition Width="1*"/>  <!-- Details/Edit Form -->
            </Grid.ColumnDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
            <!-- LEFT PANEL: VEHICLE LIST (Phase 1: DataGrid → Phase 2: SfDataGrid) -->
            <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="0"
                    Background="#252526"
                    CornerRadius="8"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <TextBlock Grid.Row="0"
                               Text="Fleet Vehicles"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,15"/>

                    <!-- Step 3: Vehicle list with Core service integration -->
                    <DataGrid Grid.Row="1"
                              x:Name="VehicleGrid"
                              ItemsSource="{Binding Vehicles}"
                              SelectedItem="{Binding SelectedVehicle, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="Transparent"
                              Foreground="White"
                              RowBackground="#3C3C3C"
                              AlternatingRowBackground="#444444"
                              BorderThickness="0">

                        <!-- DataGrid styling -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="8,10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#555555"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,5"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Column definitions -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bus #"
                                                Binding="{Binding BusNumber}"
                                                Width="80"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="License"
                                                Binding="{Binding LicenseNumber}"
                                                Width="100"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Make"
                                                Binding="{Binding Make}"
                                                Width="80"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Model"
                                                Binding="{Binding Model}"
                                                Width="90"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Year"
                                                Binding="{Binding Year}"
                                                Width="60"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Capacity"
                                                Binding="{Binding Capacity}"
                                                Width="70"
                                                IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Status" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12"
                                                Padding="8,4"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                            <Setter Property="Background" Value="#2ECC71"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                                                            <Setter Property="Background" Value="#FF8C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="OutOfService">
                                                            <Setter Property="Background" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}"
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- List Actions -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,15,0,0">
                        <Button Content="➕ New Vehicle"
                                Command="{Binding NewVehicleCommand}"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>
                        <Button Content="🔄 Refresh"
                                Command="{Binding RefreshCommand}"
                                Background="#5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,8"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Column Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="2"
                          Background="#323130"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"/>

            <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
            <!-- RIGHT PANEL: VEHICLE DETAILS/EDIT FORM -->
            <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="2"
                    Background="#252526"
                    CornerRadius="8"
                    Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding CurrentVehicle}">

                        <!-- Form Header -->
                        <TextBlock Text="Vehicle Details"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>

                        <!-- Step 3: Form inputs with Core service integration -->

                        <!-- Bus Number -->
                        <TextBlock Text="Bus Number:"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding BusNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#3C3C3C"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Padding="8,5"
                                 Margin="0,0,0,15"/>

                        <!-- License Number -->
                        <TextBlock Text="License Number:"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding LicenseNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#3C3C3C"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Padding="8,5"
                                 Margin="0,0,0,15"/>

                        <!-- Make -->
                        <TextBlock Text="Make:"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Make, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#3C3C3C"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Padding="8,5"
                                 Margin="0,0,0,15"/>

                        <!-- Model -->
                        <TextBlock Text="Model:"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#3C3C3C"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Padding="8,5"
                                 Margin="0,0,0,15"/>

                        <!-- Year and Capacity Row -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Year -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Year:"
                                           FontSize="12"
                                           Foreground="#CCCCCC"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Year, Mode=TwoWay}"
                                         Background="#3C3C3C"
                                         Foreground="White"
                                         BorderBrush="#555555"
                                         Padding="8,5"/>
                            </StackPanel>

                            <!-- Capacity -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Capacity:"
                                           FontSize="12"
                                           Foreground="#CCCCCC"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Capacity, Mode=TwoWay}"
                                         Background="#3C3C3C"
                                         Foreground="White"
                                         BorderBrush="#555555"
                                         Padding="8,5"/>
                            </StackPanel>
                        </Grid>

                        <!-- Status -->
                        <TextBlock Text="Status:"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   Margin="0,0,0,5"/>
                        <ComboBox SelectedItem="{Binding Status, Mode=TwoWay}"
                                  Background="#3C3C3C"
                                  Foreground="White"
                                  BorderBrush="#555555"
                                  Padding="8,5"
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Maintenance"/>
                            <ComboBoxItem Content="OutOfService"/>
                            <ComboBoxItem Content="Retired"/>
                        </ComboBox>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">
                            <Button Content="💾 Save"
                                    Command="{Binding DataContext.SaveVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    IsEnabled="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                    Background="#2ECC71"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"/>
                            <Button Content="🗑️ Delete"
                                    Command="{Binding DataContext.DeleteVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    IsEnabled="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- Step 3: Fleet utilization display -->
                        <Border Background="#1E1E1E"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,30,0,0"
                                Height="150">
                            <Grid>
                                <TextBlock Text="Fleet Utilization"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Top"/>

                                <!-- Phase 1: Simple utilization display -->
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding DataContext.FleetUtilization, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F1}%}"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="#0078D4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Fleet Active"
                                               FontSize="12"
                                               Foreground="#CCCCCC"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <!-- STATUS BAR -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="2"
                Background="#323130"
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="#CCCCCC"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <!-- Busy Indicator (Phase 1: Simple text → Phase 2: SfBusyIndicator) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="⏳"
                               FontSize="16"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Processing..."
                               Foreground="#0078D4"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
