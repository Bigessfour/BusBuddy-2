<UserControl x:Class="BusBuddy.WPF.Views.Route.RouteManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0"
        Background="#2D3748"
        Padding="20">
      <StackPanel>
        <TextBlock Text="ðŸšŒ Route Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"/>
        <TextBlock Text="Phase 2 - Manage bus routes and schedules"
                   FontSize="14"
                   Foreground="#A0AEC0"
                   Margin="0,5,0,0"/>
      </StackPanel>
    </Border>

    <!-- Content Area -->
    <Grid Grid.Row="1"
        Margin="20">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Route List -->
      <Border Grid.Column="0"
              Background="White"
              BorderBrush="#E2E8F0"
              BorderThickness="1"
              CornerRadius="8"
              Margin="0,0,10,0">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <TextBlock Grid.Row="0"
                     Text="Routes"
                     FontSize="16"
                     FontWeight="Bold"
                     Margin="15,15,15,10"/>

          <ListView Grid.Row="1"
                    ItemsSource="{Binding Routes}"
                    SelectedItem="{Binding SelectedRoute}"
                    BorderThickness="0">
            <ListView.ItemTemplate>
              <DataTemplate>
                <StackPanel Margin="5">
                  <TextBlock Text="{Binding RouteName}"
                      FontWeight="Bold"/>
                  <TextBlock Text="{Binding Description}"
                      FontSize="12"
                      Foreground="Gray"/>
                </StackPanel>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
        </Grid>
      </Border>

      <!-- Route Details -->
      <Border Grid.Column="1"
              Background="White"
              BorderBrush="#E2E8F0"
              BorderThickness="1"
              CornerRadius="8">
        <Grid Margin="20">
          <TextBlock Text="Select a route to view details"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="16"
                     Foreground="Gray"
                     Visibility="{Binding IsRouteNotSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>

          <!-- Route details content would go here -->
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
