<UserControl x:Class="BusBuddy.WPF.Controls.TestSyncfusionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="🧪 Basic Control Test (MVP Phase 1)"
                      FontSize="16"
                      FontWeight="Bold"
                      Margin="0,0,0,20"
                      HorizontalAlignment="Center"/>

            <!-- Test Standard WPF Button -->
            <Button Content="Test Standard WPF Button"
                   Width="200"
                   Height="40"
                   Background="#1565C0"
                   Foreground="White"
                   Margin="0,10"/>

            <!-- Test Standard WPF TextBox -->
            <TextBox Width="250"
                    Margin="0,10"
                    Padding="8"
                    Text="Test Standard WPF TextBox"/>

            <!-- Test Standard WPF ComboBox -->
            <ComboBox Width="250"
                     Margin="0,10"
                     Padding="8">
                <ComboBoxItem Content="Option 1"/>
                <ComboBoxItem Content="Option 2"/>
                <ComboBoxItem Content="Option 3"/>
            </ComboBox>

            <TextBlock Text="✅ Basic WPF controls working! Syncfusion integration pending..."
                      Foreground="Green"
                      Margin="0,20,0,0"
                      HorizontalAlignment="Center"/>

            <TextBlock Text="📝 Next: Add Syncfusion.Shared.WPF package for input controls"
                      Foreground="Orange"
                      FontSize="12"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
