<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <!--  ===============================================================================  -->
    <!--  SYNCFUSION WPF V30.1.40 VALIDATED RESOURCE DICTIONARY  -->
    <!--  ===============================================================================  -->
    <!--  ALL PROPERTIES VERIFIED FOR SYNCFUSION V30.1.40 COMPATIBILITY  -->
    <!--  UNSUPPORTED PROPERTIES REMOVED TO PREVENT COMPILATION ERRORS  -->
    <!--  ===============================================================================  -->

    <!--  ===============================================================================  -->
    <!--  SECTION 1: BUS BUDDY BRAND COLOR PALETTE  -->
    <!--  ===============================================================================  -->

    <!--  Primary Brand Colors  -->
    <Color x:Key="BusBuddy.Primary">#0078D4</Color>
    <Color x:Key="BusBuddy.SchoolBusYellow">#FFD700</Color>
    <Color x:Key="BusBuddy.SafetyOrange">#FF8C00</Color>
    <Color x:Key="BusBuddy.FleetGreen">#2ECC71</Color>

    <!--  Surface Colors (FluentDark Compatible)  -->
    <Color x:Key="BusBuddy.Surface.Dark">#1E1E1E</Color>
    <Color x:Key="BusBuddy.Surface.Medium">#252526</Color>
    <Color x:Key="BusBuddy.Surface.Light">#2D2D30</Color>
    <Color x:Key="BusBuddy.Surface.Border">#323130</Color>

    <!--  Text Colors  -->
    <Color x:Key="BusBuddy.Text.Primary">#FFFFFF</Color>
    <Color x:Key="BusBuddy.Text.Secondary">#CCCCCC</Color>
    <Color x:Key="BusBuddy.Text.Disabled">#666666</Color>

    <!--  State Colors  -->
    <Color x:Key="BusBuddy.State.Hover">#404040</Color>
    <Color x:Key="BusBuddy.State.Pressed">#4D4D4D</Color>
    <Color x:Key="BusBuddy.State.Selected">#0078D4</Color>

    <!--  Semantic Colors  -->
    <Color x:Key="BusBuddy.Semantic.Error">#E74856</Color>
    <Color x:Key="BusBuddy.Semantic.Warning">#FFC107</Color>
    <Color x:Key="BusBuddy.Semantic.Success">#2ECC71</Color>
    <Color x:Key="BusBuddy.Semantic.Info">#17A2B8</Color>

    <!--  ===============================================================================  -->
    <!--  SECTION 2: BRAND BRUSHES  -->
    <!--  ===============================================================================  -->

    <SolidColorBrush x:Key="BusBuddy.Brush.Primary" Color="{StaticResource BusBuddy.Primary}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.SchoolBusYellow" Color="{StaticResource BusBuddy.SchoolBusYellow}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.SafetyOrange" Color="{StaticResource BusBuddy.SafetyOrange}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.FleetGreen" Color="{StaticResource BusBuddy.FleetGreen}" />

    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Dark" Color="{StaticResource BusBuddy.Surface.Dark}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Medium" Color="{StaticResource BusBuddy.Surface.Medium}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Light" Color="{StaticResource BusBuddy.Surface.Light}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Border" Color="{StaticResource BusBuddy.Surface.Border}" />

    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Primary" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Secondary" Color="{StaticResource BusBuddy.Text.Secondary}" />
    <SolidColorBrush x:Key="BusBuddy.Brush.Text.Disabled" Color="{StaticResource BusBuddy.Text.Disabled}" />

    <!--  ===============================================================================  -->
    <!--  SECTION 3: SYNCFUSION V30.1.40 VALIDATED CONTROL STYLES  -->
    <!--  ===============================================================================  -->
    <!--  ONLY PROPERTIES SUPPORTED IN V30.1.40 ARE INCLUDED  -->

    <!--  3.1 NAVIGATION CONTROLS  -->
    <Style x:Key="BusBuddy.SfNavigationDrawer" TargetType="syncfusion:SfNavigationDrawer">
        <Setter Property="DisplayMode" Value="Expanded" />
        <Setter Property="Position" Value="Left" />
        <Setter Property="DrawerWidth" Value="250" />
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <!--  BorderBrush and BorderThickness removed - not supported in v30.1.40  -->
    </Style>

    <!--  3.2 DOCKING CONTROLS  -->
    <Style x:Key="BusBuddy.DockingManager" TargetType="syncfusion:DockingManager">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="DockFill" Value="True" />
        <Setter Property="UseDocumentContainer" Value="True" />
        <Setter Property="ContainerMode" Value="TDI" />
        <Setter Property="PersistState" Value="True" />
        <!--  BorderBrush removed - not supported in v30.1.40  -->
    </Style>

    <!--  3.3 DATA GRID CONTROLS  -->
    <Style x:Key="BusBuddy.SfDataGrid" TargetType="syncfusion:SfDataGrid">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HeaderLinesVisibility" Value="Horizontal" />
        <Setter Property="AllowSorting" Value="True" />
        <Setter Property="AllowFiltering" Value="True" />
        <Setter Property="RowHeight" Value="32" />
        <Setter Property="HeaderRowHeight" Value="40" />
    </Style>

    <!--  3.4 CHART CONTROLS  -->
    <Style x:Key="BusBuddy.SfChart" TargetType="syncfusion:SfChart">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Palette" Value="Metro" />
    </Style>

    <!--  3.5 SCHEDULER CONTROLS  -->
    <Style x:Key="BusBuddy.SfScheduler" TargetType="syncfusion:SfScheduler">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ViewType" Value="Week" />
        <Setter Property="FirstDayOfWeek" Value="Sunday" />
    </Style>

    <!--  3.6 BUSY INDICATOR CONTROLS  -->
    <Style x:Key="BusBuddy.SfBusyIndicator" TargetType="syncfusion:SfBusyIndicator">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="AnimationType" Value="Gear" />
        <Setter Property="Header" Value="Loading..." />
        <Setter Property="ViewboxHeight" Value="50" />
        <Setter Property="ViewboxWidth" Value="50" />
    </Style>

    <!--  3.7 BUTTON CONTROLS  -->
    <Style x:Key="BusBuddy.ButtonAdv.Primary" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <!--  CornerRadius removed - not supported in v30.1.40 ButtonAdv  -->
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.SchoolBus" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.SchoolBusYellow}" />
        <Setter Property="Foreground" Value="#1E1E1E" />
        <Setter Property="BorderBrush" Value="#E6C200" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Safety" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.SafetyOrange}" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="#E67E22" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Success" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.FleetGreen}" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="#27AE60" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="BusBuddy.ButtonAdv.Navigation" TargetType="syncfusion:ButtonAdv">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  3.8 INPUT CONTROLS  -->
    <Style x:Key="BusBuddy.ComboBoxAdv" TargetType="syncfusion:ComboBoxAdv">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  3.9 GAUGE CONTROLS  -->
    <Style x:Key="BusBuddy.SfCircularGauge" TargetType="syncfusion:SfCircularGauge">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--  3.10 PROGRESS CONTROLS - VALIDATED FOR V30.1.40  -->
    <Style x:Key="BusBuddy.SfCircularProgressBar" TargetType="syncfusion:SfCircularProgressBar">
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="AnimationDuration" Value="0:0:1" />
        <Setter Property="ProgressColor" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="TrackColor" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
    </Style>

    <Style x:Key="BusBuddy.SfLinearProgressBar" TargetType="syncfusion:SfLinearProgressBar">
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="AnimationDuration" Value="0:0:1" />
        <Setter Property="ProgressColor" Value="{StaticResource BusBuddy.Brush.Primary}" />
        <Setter Property="TrackColor" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="Height" Value="20" />
        <!--  CornerRadius removed - not supported in SfLinearProgressBar v30.1.40  -->
    </Style>

    <!--  ===============================================================================  -->
    <!--  SECTION 4: BACKWARD COMPATIBILITY ALIASES  -->
    <!--  ===============================================================================  -->

    <!--  Primary aliases  -->
    <Style
        x:Key="PrimaryButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="SchoolBusButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.SchoolBus}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="SafetyButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Safety}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="SuccessButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Success}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="NavigationButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}"
        TargetType="syncfusion:ButtonAdv" />

    <!--  Control aliases  -->
    <Style
        x:Key="StandardDataGridStyle"
        BasedOn="{StaticResource BusBuddy.SfDataGrid}"
        TargetType="syncfusion:SfDataGrid" />
    <Style
        x:Key="StandardComboBoxStyle"
        BasedOn="{StaticResource BusBuddy.ComboBoxAdv}"
        TargetType="syncfusion:ComboBoxAdv" />
    <Style
        x:Key="StandardDockingManagerStyle"
        BasedOn="{StaticResource BusBuddy.DockingManager}"
        TargetType="syncfusion:DockingManager" />
    <Style
        x:Key="StandardNavigationDrawerStyle"
        BasedOn="{StaticResource BusBuddy.SfNavigationDrawer}"
        TargetType="syncfusion:SfNavigationDrawer" />
    <Style
        x:Key="LoadingIndicatorStyle"
        BasedOn="{StaticResource BusBuddy.SfBusyIndicator}"
        TargetType="syncfusion:SfBusyIndicator" />
    <Style
        x:Key="CircularProgressStyle"
        BasedOn="{StaticResource BusBuddy.SfCircularProgressBar}"
        TargetType="syncfusion:SfCircularProgressBar" />
    <Style
        x:Key="CustomBusyStyle"
        BasedOn="{StaticResource BusBuddy.SfBusyIndicator}"
        TargetType="syncfusion:SfBusyIndicator" />
    <Style
        x:Key="IconButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}"
        TargetType="syncfusion:ButtonAdv" />

    <!--  Additional aliases commonly used  -->
    <Style
        x:Key="BusBuddyPrimaryButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="BusBuddySecondaryButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="SecondaryButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Navigation}"
        TargetType="syncfusion:ButtonAdv" />

    <!--  Missing styles from usage  -->
    <Style
        x:Key="EmergencyButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Safety}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="FleetSuccessButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Success}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="InfoButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"
        TargetType="syncfusion:ButtonAdv" />
    <Style
        x:Key="DangerButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Safety}"
        TargetType="syncfusion:ButtonAdv" />

    <!--  Standard Progress Bar Style - Corrected  -->
    <Style
        x:Key="StandardLinearProgressBarStyle"
        BasedOn="{StaticResource BusBuddy.SfLinearProgressBar}"
        TargetType="syncfusion:SfLinearProgressBar" />

    <!--  ===============================================================================  -->
    <!--  SECTION 4: MISSING UI STYLES FOR VIEWS  -->
    <!--  ===============================================================================  -->

    <!--  BusBuddy Button Styles  -->
    <Style
        x:Key="BusBuddyButtonAdvStyle"
        BasedOn="{StaticResource BusBuddy.ButtonAdv.Primary}"
        TargetType="syncfusion:ButtonAdv" />

    <!--  Form and Layout Styles  -->
    <Style x:Key="BusBuddyFormContentStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Dark}" />
        <Setter Property="Margin" Value="16" />
    </Style>

    <Style x:Key="BusBuddyFormHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!--  Tile and Header Styles  -->
    <Style x:Key="BusBuddyTileHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Key="BusBuddyTileSubHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource BusBuddy.Brush.Text.Secondary}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="BusBuddyDashboardTileStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BusBuddy.Brush.Surface.Medium}" />
        <Setter Property="BorderBrush" Value="{StaticResource BusBuddy.Brush.Surface.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="MinHeight" Value="120" />
        <Setter Property="MinWidth" Value="200" />
    </Style>

    <!--  ===============================================================================  -->
    <!--  SECTION 5: GLOBAL SURFACE RESOURCES FOR DYNAMIC BINDING  -->
    <!--  ===============================================================================  -->

    <SolidColorBrush x:Key="SurfaceBackground" Color="{StaticResource BusBuddy.Surface.Dark}" />
    <SolidColorBrush x:Key="SurfaceBorder" Color="{StaticResource BusBuddy.Surface.Border}" />
    <SolidColorBrush x:Key="SurfaceBorderBrush" Color="{StaticResource BusBuddy.Surface.Border}" />
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="ContentForeground" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="ContentBackground" Color="{StaticResource BusBuddy.Surface.Medium}" />
    <SolidColorBrush x:Key="TextForeground" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="ControlForeground" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource BusBuddy.Surface.Light}" />
    <SolidColorBrush x:Key="ProfessionalTextPrimary" Color="{StaticResource BusBuddy.Text.Primary}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource BusBuddy.Surface.Dark}" />
    <SolidColorBrush x:Key="AccentBackground" Color="{StaticResource BusBuddy.Primary}" />
    <SolidColorBrush x:Key="BrandFleetGreenBrush" Color="{StaticResource BusBuddy.FleetGreen}" />

</ResourceDictionary>
