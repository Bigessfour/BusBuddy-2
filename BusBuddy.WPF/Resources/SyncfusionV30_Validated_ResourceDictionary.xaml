                   Color="{StaticResource BusBuddy.Surface.Medium}"/>
  <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Light"
                   Color="{StaticResource BusBuddy.Surface.Light}"/>
  <SolidColorBrush x:Key="BusBuddy.Brush.Surface.Border"
                   Color="{StaticResource BusBuddy.Surface.Border}"/>

  <SolidColorBrush x:Key="BusBuddy.Brush.Text.Primary"
                   Color="{StaticResource BusBuddy.Text.Primary}"/>
  <SolidColorBrush x:Key="BusBuddy.Brush.Text.Secondary"
                   Color="{StaticResource BusBuddy.Text.Secondary}"/>
  <SolidColorBrush x:Key="BusBuddy.Brush.Text.Disabled"
                   Color="{StaticResource BusBuddy.Text.Disabled}"/>

